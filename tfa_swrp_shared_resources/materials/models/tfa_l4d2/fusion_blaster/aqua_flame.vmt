"VertexLitGeneric"
{
	$baseTexture "models\tfa_l4d2\fusion_blaster\Blue_Flame"
	
	$color2 "[0.5 1 0.5]"
	
	$translucent "1"
	$additive "1"
	
	$model "1"
	$nocull "1"
	
	$selfillum "1"
	$selfillummask "models\tfa_l4d2\fusion_blaster\blue_flame"
	$selfillumtint "[2 2 2]" //[1 1 1] can be used if you want it to glow a bit less.
	
	$vertexcolor     "1"
    $vertexalpha     "1"
	
    "Proxies"
	{
		"AnimatedTexture"
		{
		   "animatedtexturevar" "$basetexture"
		   "animatedtextureframenumvar" "$frame"
		   "animatedtextureframerate" "30"
		}
	}
}